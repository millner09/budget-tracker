{{define "title"}}View Category{{end}}

{{define "main"}}
<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">{{.Category.Title}}</h5>
    <div class="form-check form-switch">
  <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault" {{if .Category.Enabled}} checked {{end}}>
  <label class="form-check-label" for="flexSwitchCheckDefault">Enabled</label>
</div>

{{end}}